PLAN9_IP_OBJS = \
	$(addprefix 9vx/,\
		devip.o \
		devip-posix.o \
		$(PLAN9PCAP).o \
		$(PLAN9TAP).o \
		vether.o \
	) \
	$(addprefix 9vx/a/,\
		devaoe.o \
