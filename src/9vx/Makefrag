		stub.o \
		term.o \
		time.o \
		trap.o \
		tty.o \
		vx32.o \
	)

ifeq ($(OS),darwin)
PLAN9_OBJS := $(PLAN9_OBJS) 9vx/osx/signal.o 9vx/osx/cmpswap.o
endif

# While we could do an || here on the os, leave this: linux 
# or freebsd may later differ in what they do. 
ifeq ($(OS),linux)
PLAN9_OBJS := $(PLAN9_OBJS) 9vx/gccmagic/cmpswap.o
endif

ifeq ($(OS),freebsd)
PLAN9_OBJS := $(PLAN9_OBJS) 9vx/gccmagic/cmpswap.o
endif

